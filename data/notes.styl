@import 'util.styl';
@import 'colors.styl';

.notes-window {
  .notes {
    padding: 0 6px 6px 6px;
  }

  .note-view {
    padding: 12px;
    margin-bottom: 6px;
  }

  .search-bar {
    padding: 0 3px 12px;
  }

  list > row {
    background-color: inherit;
  }

  .card-text-view {
    background-color: transparent;
    color: inherit;
  }
}

for name, info in colors {
  .note-card.style-{name} {
    background-color: info.bg;
    color: info.fg;

    selection:focus-within {
      background-color: gtkalpha(
        info.ink,
        0.3
      );
    }
  }
}
