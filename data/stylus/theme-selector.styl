@import './util.styl';

themeselector {
  margin: 9px;

  checkbutton {
    padding: 0;
    min-height: 44px;
    min-width: 44px;
    padding: 1px;
    background-clip: content-box;
    border-radius: 9999px;
    box-shadow: inset 0 0 0 1px at(borders);

    &.follow, &.light, &.dark {
      &:checked {
        box-shadow: inset 0 0 0 2px at(theme_selected_bg_color);
      }
    }

    &.follow {
      background-image: linear-gradient(
        to bottom right,
        #fff 49.99%,
        #202020 50.01%
      );
    }

    &.light {
      background-color: #fff;
    }

    &.dark {
      background-color: #202020;
    }

    radio {
      -gtk-icon-source: none;
      border: none;
      background: none;
      box-shadow: none;
      min-width: 12px;
      min-height: 12px;
      transform: translate(27px, 14px);
      padding: 2px;

      &:checked {
        -gtk-icon-source: -gtk-icontheme('object-select-symbolic');
        background-color: at(theme_selected_bg_color);
        color: at(theme_selected_fg_color);
      }
    }
  }
}