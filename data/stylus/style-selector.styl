@import 'util.styl';
@import 'colors.styl';

.style-selector-box > * {
  border-radius: 99px;
}

styleselector {
  margin: 9px;

  checkbutton {
    padding: 0;
    min-height: 44px;
    min-width: 44px;
    padding: 1px;
    background-clip: content-box;
    border-radius: 9999px;
    box-shadow: inset 0 0 0 1px at(borders);

    &:checked {
      box-shadow: inset 0 0 0 2px at(accent_bg_color);
    }

    &:focus-within {
      box-shadow: inset 0 0 0 2px at(accent_bg_color), 0 0 0 2px at(borders);
      outline-color: transparent;
    }

    for name, info in colors {
      &.style-{name} {
        background-color: info.header;
        color: info.fg;
      }
    }

    radio {
      -gtk-icon-source: none;
      border: none;
      background: none;
      box-shadow: none;
      color: at(accent_fg_color);
      min-width: 12px;
      min-height: 12px;
      transform: translate(27px, 14px);
      padding: 2px;

      &:checked {
        -gtk-icon-source: -gtk-icontheme('object-select-symbolic');
        border: 2px solid at(accent_bg_color);
        background-color: at(accent_bg_color);
        color: at(accent_fg_color);
      }
    }
  }
}